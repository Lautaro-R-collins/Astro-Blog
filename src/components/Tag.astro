---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${tag.toLowerCase()}`} aria-label={tag}>
	<span
		class='bg-cyan-800 font-bold text-white dark:bg-cyan-800 dark:text-white dark:hover:bg-cyan-950 hover:bg-cyan-950 shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
